<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SuperTicTacToe.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SuperTicTacToe"
    xmlns:views="clr-namespace:SuperTicTacToe.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SuperTicTacToe">

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate views:StartScreen}"
        Route="MainPage" />
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate views:GameBoardSelectionScreen}"
        Route="BoardSelection" />
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate views:PlayerSelectionScreen}"
        Route="PlayerSelection" />
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="Game" />

</Shell>
