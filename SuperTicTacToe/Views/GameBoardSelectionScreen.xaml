<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuperTicTacToe.Views.GameBoardSelectionScreen"
             Title="GameBoardSelectionScreen">
    <VerticalStackLayout>
        <Label 
            Text="Select a board size to begin!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Rows:" Grid.Column="0"/>
        <Picker 
             ItemsSource="{Binding RowColumnSelectionOptions}"
             SelectedItem="{Binding GameService.SelectedRows}"
             Grid.Column="1"/>

        <Label Text="Columns" Grid.Column="2"/>
        <Picker 
             ItemsSource="{Binding RowColumnSelectionOptions}"
             SelectedItem="{Binding GameService.SelectedColumns}"
             Grid.Column="3"/>
        <Button
             Grid.Column="4"
             Text="Go"
            Clicked="GoClicked"
             />
    </VerticalStackLayout>
</ContentPage>